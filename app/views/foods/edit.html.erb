<section class="section"><div class="container">
<h1 class="title">This is a Edit Page</h1>

<%= form_with model: @foods, html: { class: "field" }, url: {action: :update} do |form| %>
  
  <%= form.label "Food Title", class: "label"  %>
  <div class="control">
  <%= form.text_field :food_title, class: "input" %>
  </div>
  <%= form.label "Anime from?", class: "label"  %>
  <div class="control">
  <%= form.text_field :anime_name, class: "input" %>
  </div>
  <%= form.label "Anime Food Recipe", class: "label" %>
  <div class="control">
  <%= form.text_area :anime_food_recipe, class: "textarea" %>
  </div>
 <div class="field"><p class="control">
  <%= form.submit "Submit", class: "button is-primary mt-4" %>
 </p></div>


<% end %>

</div></section>